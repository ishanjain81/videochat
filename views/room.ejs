    let chat = true;
</script>
<script defer src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script defer src="/js/peer.js"></script>
<script defer src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.1/socket.io.js"></script>
<script src="/js/socket_connection.js" defer></script>
<link rel="stylesheet" href="/css/room.css">
<link rel="stylesheet" href="/css/chat_box.css">
<div id="main">
    <div id="left-part" class="left-half">
        <div class="videos">
            <div id="video-box"></div>
        </div>
        <div id="left-options">
            <div id="videoStop">
                <button> Video </button>
            </div>
            <div id="muteButton">
                <button> Audio </button>
            </div>
            <div id="chat-show">
                <button> Chat </button>
            </div>
            <div id="add-friend">
                <button id="friend-open"> Add </button>
            </div>
        </div>
    </div>
    <div id="right-part" class="right-show">
        <%- include('_chat_box'); %>
    </div>
    <div id="friend-box" class="friend_box">
        <div class="friend">
            <h3>Invite a Friend via Mail</h3>
            <button id="friend-close">
                <i class="fas fa-times"></i>
            </button>
            <div id="invite-form">
                <form action="/room/invite" method="POST" id="invite-forms">
                    <input type="email" name="email" placeholder="Enter friend's Email" required>
                    <input  id="current-link" type="hidden" name="link" value="">
                    <button type="submit"><i class="fad fa-share-all"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>
<script defer src="/js/room.js"></script>
